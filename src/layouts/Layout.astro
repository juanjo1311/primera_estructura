---
const { title } = Astro.props;
const products =[
	{
		icon:"",
		name:"Producto 1"
	},
	{
		icon:"",
		name:"Producto 2"
	},
	{
		icon:"",
		name:"Producto 3"
	},
]
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<div class="header">
			<div class="container header_info">
				Contenido de la cabecera
			</div>
		</div>
		<div class="container banner">
			BANNER
		</div>
		<nav class="container main_menu">
			<a href="/">Inicio</a>  <a href="/productos">Productos</a>
		</nav>
		<div class="container product_list">
			{
				products.map((products) => <div>
				                              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(0, 0, 0, 1);transform: ;msFilter:;"><path d="M12 2C7.51 2 4 4.2 4 7v10c0 2.8 3.51 5 8 5s8-2.2 8-5V7c0-2.8-3.51-5-8-5zm0 18c-3.54 0-6-1.58-6-3v-6.67A10.52 10.52 0 0 0 12 12a10.52 10.52 0 0 0 6-1.67V17c0 1.42-2.46 3-6 3zm0-10c-3.54 0-6-1.58-6-3s2.46-3 6-3 6 1.58 6 3-2.46 3-6 3z"></path><ellipse cx="12" cy="7" rx="3" ry="1.71"></ellipse></svg>
				                               {products.name} 
			</div>)
			}
			
		</div>
		<div class="container categories">
			categorias
		</div>

		<div class="container">
			<slot />
		</div>
		<div class="container footer">
			Este es el footer
		</div>
	</body>
</html>
<style is:global>
	.main_menu{
		display: flex;
		height: 40px;
		background-color: #f18805;
		
	}
	.main_menu a{
		transition: background 300ms ease-in-out;
		height: 100%;
		display: flex;
		align-items: center;
		text-decoration: none;
		color: #fff;
		padding: 0 12px;
	}
	.main_menu a:hover{
		background: #f0a202;
	}
	.header{
		background: orange;
	}
	.header_info{
		height: 80px;
	}
	.banner{
		height: 240px;
	}
	.product_list{
		display: flex;
		height: 100px;
		margin-top: 8px;n
	}
	.product_list div{
		height: 100%;
		display: flex;
		max-width: 120px;
		text-align: center;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		border: 1px solid gray;
		border-radius: 4px;
		margin-right: 3px;
	}
	.categories{
		height: 80px;
	}
	.footer{
		height: 80px;
	}
	.container{
		max-width: 1280px;
		/* background: blue; */
		margin: 0 auto;
	}

	html, body {
		margin: 0;
		padding: 0;
		font-family: system-ui, sans-serif;

	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
